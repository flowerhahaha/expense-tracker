<div class="container mt-5 login-container">
  <div class="card card-body">
    <h1 class="text-center mt-3">Login</h1> 
    {{> message}}
    <form action="/users/login" method="POST">
      <div class="mb-3">
        <label for="email" class="mb-2">Email</label>
        <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email" required value="{{email}}">
      </div>
      <div class="mb-3">
        <label for="password" class="mb-2">Password</label>
        <input type="password" id="password" name="password" class="form-control" placeholder="Enter Password" required>
      </div>
      <div>
        <button type="submit" class="btn btn-outline-primary mt-2 me-2">Login</button>
        <a href="/auth/facebook" class="btn btn-outline-info mt-2 me-2">
          Login with Facebook 
        </a>
        <a href="/auth/google" class="btn btn-outline-danger mt-2">
          Login with Google
        </a>
      </div>
    </form>
    <div class="d-flex justify-content-between">
      <p class="mt-4">
        No Account? <a href="/users/register">Register</a>
      </p>
      <p class="mt-4">
        <a href="/auth/forgot-password">Forgot Password?</a>
      </p>
    </div>
  </div>
</div>
